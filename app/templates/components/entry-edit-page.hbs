<h1>Edit entry</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input class="form-control" value=title}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input class="form-control" value=date}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{textarea class="form-control" value=content}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input class="form-control" value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input class="form-control" value=category}}
    </div>

    <button class="btn btn-success"{{action 'edit'}}>Save edits</button>
    <hr>
  </form>
</div>
