<h1>Edit <em>"{{entry.title}}"</em></h1>
<img src="{{entry.image}}" alt="" />
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author placeholder=entry.author}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input class="form-control" value=title placeholder=entry.title}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input class="form-control" value=date placeholder=entry.date}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{textarea class="form-control" value=content placeholder=entry.content}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input class="form-control" value=image id="image" placeholder=entry.image}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input class="form-control" value=category placeholder=entry.category}}
    </div>

    <button class="btn btn-success"{{action 'edit'}}>Save edits</button>
    <hr>
  </form>
</div>
