{{#if addNewEntry}}
  <h1>New entry</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input class="form-control" value=date}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{textarea class="form-control" value=content}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input class="form-control" value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input class="form-control" value=category}}
      </div>

      <button class="btn btn-success"{{action 'saveEntry1'}}>Save</button>
      <hr>
    </form>
  </div>
{{else}}
  <button class="btn btn-block btn-info btn-lg"{{action 'entryFormShow'}}>New entry</button>
  <br><hr>
{{/if}}
